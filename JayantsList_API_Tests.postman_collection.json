	"item": [
		{
			"name": "1. Authentication",
			"item": [
				{
					"name": "1.1 Send OTP",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"mobile\": \"9675789818\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/accounts/send-otp",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"accounts",
								"send-otp"
							]
						}
					},
					"response": []
				},
				{
					"name": "1.2 Validate OTP",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.environment.set(\"auth_token\", jsonData.auth_token);",
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"mobile\": \"9675789818\",\n  \"otp\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/accounts/validate-otp",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"accounts",
								"validate-otp"
							]
						}
					},
					"response": []
				}
			]
		},
